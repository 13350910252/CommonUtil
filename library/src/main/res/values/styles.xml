<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonTextView">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogCenter">
        <item name="android:windowEnterAnimation">@anim/dialog_center_animation_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_center_animation_out</item>
    </style>

    <style name="DialogBottom">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_animation_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_animation_out</item>
    </style>
</resources>